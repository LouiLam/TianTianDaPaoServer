<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.blackjack.task.TaskDao">
    <resultMap type="User" id="ormUser">
    </resultMap>
    
    <select id="selectUserTask" resultType="Map" parameterType="Integer">
		select taskid,status
		from usertask 
		where uid = #{uid} 
	</select>
	   <select id="selectUidCountByUserTask" resultType="Integer" parameterType="Integer">
		select count(*) 
		from usertask 
		where uid = #{uid}
	</select>
</mapper>  
